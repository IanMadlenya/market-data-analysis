<Window x:Class="MarketDataAnalyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketDataAnalyser"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" >
    <Canvas>
        <Label x:Name="lblTitle" Content="Market Data Analyser" Height="81" Canvas.Left="10" Canvas.Top="10" Width="497" FontSize="50" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnStocksList" Content="List of all stocks" Height="39" Canvas.Left="170" Canvas.Top="173" Width="196" Click="ShowStockListWindow"/>
        <Button x:Name="btnSpecificStock" Content="Search stocks" Height="31" Canvas.Left="318" Canvas.Top="111" Width="158" Click="ShowSpecificStockWindow"/>
        <Button x:Name="btnStocksCompare" Content="Comapre stocks" Height="37" Canvas.Left="170" Canvas.Top="230" Width="196" Click="ShowCompareStockWindow"/>
        <TextBox x:Name="textBox" Height="31" Canvas.Left="80" TextWrapping="Wrap" Text="TextBox" Canvas.Top="111" Width="233"/>

    </Canvas>
</Window>
